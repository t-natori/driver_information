<div class="container">
  <div class="row text-center mb-4">
    <div class="col-3 offset-1">
      <h2 class="bg-info text-white d-block text-center">
        <strong>マイページ</strong>
      </h2>
    </div>
    <div class="col-2 offset-3 mt-3"><%= "タグ絞り込み:" %></div>
    <div class="col-2 mt-3">
      <%= form_tag customer_path, method: :get, class: 'boards__searchForm' do %>
        <%= select_tag :tag_id, options_from_collection_for_select(Tag.all, :id, :name, params[:tag_id]), { prompt: 'すべて表示', onchange: 'submit(this.form);' } %>
      <% end %>
    </div>
  </div>
  <p id="notice"><%= notice %></p>
  <div class="row mt-4">
    <div class="col-2 table" style="background-color: pink;">
      <h4 class="text-center mt-2"><strong>ユーザー情報</strong></h4>
      <div>
        <label>氏名</label><br>
        <strong class="d-flex justify-content-center"><%= @customer.name %></strong>
      </div><br>
      <div>
        <label>氏名(カナ)</label><br>
        <strong class="d-flex justify-content-center"><%= @customer.name_kana %></strong>
      </div><br>
      <div>
        <label>ニックネーム</label><br>
        <strong class="d-flex justify-content-center"><%= @customer.nickname %></strong>
      </div><br>
      <div>
        <label>メールアドレス</label><br>
        <strong class="d-flex justify-content-center"><%= @customer.email %></strong>
      </div><br>
      <div>
        <label>電話番号</label><br>
        <strong class="d-flex justify-content-center"><%= @customer.phone_number %></strong>
      </div><br>
      <div>
        <label>会員ステータス</label><br>
        <div>
          <strong class="d-flex justify-content-center">
            <% if @customer.status == true %>
              <%= "有効" %>
            <% else %>
              <%= "退会" %>
            <% end %>
          </strong>
        </div>
      </div><br>
      <% if @customer.name != "guestcustomer" %>
        <%= link_to "ユーザー編集", edit_customer_path(@customer.id), class:"btn btn-success btn-block mt-3 mb-2" %>
        <%= link_to "退会する", quit_path, class:"btn btn-danger btn-block mt-3 mb-2" %>
      <% end %>
    </div>
    <div class="col-10" style="background-color: orange;">
      <h4 class="text-center mt-2">
        <strong>投稿一覧</strong>
      </h4>
      <%= render "publics/posts/post_index", posts: @posts %>
    </div>
  </div>
</div>