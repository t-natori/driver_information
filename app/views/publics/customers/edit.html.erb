<div class="container">
  <div class="row">
    <div class="col">
      <h2><strong></strong></h2>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table>
        <tbody>
          <%= form_with model: @customer do |f| %>
          <tr>
            <td>会員ID</td>
            <td><%= f.customer.id %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.text_field :name_kana %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.text_field :nickname %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.text_field :email %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.telephone_field :phone_number %></td>
          </tr>
          <tr>
            <td></td>
            <td>
              <%= f.radio_button :status, "true" %>
              <%= f.label :status, "有効" %>
              <%= f.radio_button :status, "false" %>
              <%= f.label :status, "退会" %>
            </td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "更新" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>