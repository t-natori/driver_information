<div class="container">
  <div class="row text-center mb-4">
    <div class="col-3 offset-1">
      <h2 class="bg-info text-white d-block text-center">
        <strong>投稿編集</strong>
      </h2>
    </div>
  </div>
  <div class="pt-5 pb-5" style="background-color: lightblue;">
    <%= form_with model: @post, url: post_path(@post.id) do |f| %>
      <div class="form-group row mx-auto">
        <%= f.label :name, "施設名", class:"col-3 offset-1"%>
        <%= f.text_field :name, class:"col-5" %>
      </div><br>
      <div class="form-group row mx-auto">
        <%= f.label :address, "住所", class:"col-3 offset-1" %>
        <%= f.text_field :address, class:"col-5" %>
      </div><br>
      <div class="form-group row mx-auto">
        <%= f.label :recommend, "おすすめ度", class:"col-3 offset-1" %>
        <div id="star" class="col-5"></div>
      </div><br>
      <div>
        <%= f.label :genre, "ジャンル", class:"col-3 offset-1" %>
        <%= @post.genre.name %>
      </div><br>
      <div class="form-group row mx-auto">
        <%= f.label :clean, " 清潔度", class:"col-3 offset-1" %>
        <div id="star-clean" class="col-5"></div>
      </div><br>
      <div class="form-group row mx-auto">
        <%= f.label :detail, "詳細説明", class:"col-3 offset-1" %>
        <%= f.text_field :detail, class:"col-5" %>
      </div><br>
      <div class="form-group row mx-auto">
        <%= f.label :status, "投稿ステータス", class:"col-3 offset-1" %>
        <div class="textalign-center col-5">
          <%= f.radio_button :status, true %>
          <%= f.label :status, "公開" %>
          <%= f.radio_button :status, false %>
          <%= f.label :status, "非公開" %>
        </div>
      </div><br>
      <div class="row">
        <div class="col-5 offset-3 d-flex justify-content-around">
          <%= f.submit "更新", class:"btn btn-success" %>
          <%= link_to "戻る", post_path(@post), class:"btn btn-primary" %>
        </div>
      </div>


    <% end %>
  </div>
</div>


<script>
init();
function init(){
  if (0 < $('#star img').length) {
    return false;
  } else {


    $('#star').raty({
      starOn: "<%= asset_path('star-on.png') %>",
      starOff: "<%= asset_path('star-off.png') %>",
      scoreName: 'post[recommend]',
      // 編集画面で星評価も変更できるようにするためコメントアウト
      // readOnly: true,
      // 星評価の読み込み
      score: <%= @post.recommend %>,
    });
    $('#star-clean').raty({
      starOn: "<%= asset_path('star-on.png') %>",
      starOff: "<%= asset_path('star-off.png') %>",
      scoreName: 'post[clean]',
      // readOnly: true,
      score: <%= @post.clean %>,
    });

  }
}
</script>
