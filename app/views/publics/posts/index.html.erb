<div class="container">
  <div class="row">
    <div class="col">
      <h2><strong>投稿一覧</strong></h2>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr>
            <td>投稿者(ニックネーム)</td>
            <td>施設名</td>
            <td>おすすめ度</td>
            <td>ジャンル</td>
            <td>施設の種類</td>
            <td>いいね</td>            
            <td>投稿ステータス</td>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |t| %>
          <tr>
            <td>
              <%= link_to customer_path(t.cusomer_id) do %>
                <%= t.customer.nickname %>
              <% end %>
            </td>
            <td>
              <%= link_to post_path(t.id) do %>
                <%= t.name %>
              <% end %>
            </td>
            <td><div id="star"></div></td>
            <td><%= t.genre(genre.id) %></td>
            <td><%= t.category %></td>
            <td>♡（数字）</td>            
            <td><%= t.status %></td>
          </tr>

        </tbody>
      </table>
    </div>
  </div>
</div>

            <script>
              $("#star").raty({
                starOn: "<%= asset_path('star-on.png') %>",
                starOff: "<%= asset_path('star-off.png') %>",
                scoreName: 'post[recommend]'
                // 読み取り専用
                readOnly: true,
                // 星評価の表示
                score: <%= f.recommend %>,
              });
            </script>
          <% end %>

