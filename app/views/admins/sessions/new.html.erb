<div class="container" style="margin: 70px auto;">
  <div class="row">
    <div class="col-6 offset-3">
      <h2 class="bg-success text-white d-block text-center">管理者ログイン</h2>
    </div>
  </div>
  <div class="row" style="background-color: lightgreen; margin: 40px 0;">
    <div class="col-6 offset-3">
      <%= form_with model: @customer, url: customer_session_path do |f| %>
        <table class="table table-borderless" style="margin-top: 20px;">
          <tbody>
            <tr class="field">
              <td><%= f.label :email, "メールアドレス" %></td>
              <td><%= f.email_field :email, autocomplete: "email" %></td>
            </tr>
            <tr class="field">
              <td>
                <%= f.label :password, "パスワード" %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> 文字以上)</em>
                <% end %>
              </td>
              <td><%= f.password_field :password, autocomplete: "new-password" %></td>
            </tr>
            <tr class="actions">
              <td></td>
              <td><%= f.submit "ログイン", class: "btn btn-success" %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>
