<div class="container">
  <div class="row text-center bg-secondary p-2 text-white mb-5">
    <div class="col">
      <h2><strong><%= @customer.name %>さんの情報編集</strong></h2>
    </div>
  </div>
  <div class="row" style="background-color: lightblue;">
    <div class="col-6 offset-3">
      <table class="table">
        <tbody>
          <%= form_with model: @customer, url: admins_customer_path(@customer), method: :patch do |f| %>
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td><%= f.label :name, "氏名" %></td>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <td><%= f.label :name_kana, "氏名(カナ)" %></td>
            <td><%= f.text_field :name_kana %></td>
          </tr>
          <tr>
            <td><%= f.label :nickname, "ニックネーム" %></td>
            <td><%= f.text_field :nickname %></td>
          </tr>
          <tr>
            <td><%= f.label :email, "メールアドレス" %></td>
            <td><%= f.text_field :email %></td>
          </tr>
          <tr>
            <td><%= f.label :phone_number, "電話番号" %></td>
            <td><%= f.telephone_field :phone_number %></td>
          </tr>
          <tr>
            <td><%= f.label :status, "会員ステータス" %></td>
            <td>
              <%= f.radio_button :status, "true" %>
              <%= f.label :status, "有効" %>
              <%= f.radio_button :status, "false" %>
              <%= f.label :status, "退会" %>
            </td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "変更", class:"btn btn-success" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>