<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-light" style="height: 120px; background-color: blue;">
    <div class="container">
      <%= link_to root_path,class: "header-logo-letter" do %><%= image_tag('logo.png', :size => "200x120") %><% end %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <% if admin_signed_in? %>
          <ul class="navbar-nav ml-auto">
          <!--管理者ログイン時-->
            <li class="mx-3"><%= link_to '会員一覧', admins_customers_path, class: 'btn btn-outline-primary nav-link text-dark' %></li>
            <li class="mx-3"><%= link_to '投稿一覧', admins_posts_path, class: 'btn btn-outline-secondary nav-link text-dark' %></li>
            <li class="mx-3"><%= link_to 'ジャンル一覧', admins_genres_path, class: 'btn btn-outline-secondary nav-link text-dark' %></li>
            <li class="mx-3"><%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: 'btn btn-outline-secondary nav-link text-dark' %></li>
          </ul>
        <% elsif customer_signed_in? %>
          <ul class="navbar-nav ml-auto">
            <!--会員ログイン時-->
            <li class="mx-3 text-center">
              会員名(ニックネーム)<br>
              <strong><%= current_customer.nickname %></strong>
            </li>
            <li class="mx-3"><%= link_to '新規投稿', new_post_path, class: 'btn btn-outline-success nav-link text-dark' %></li>
            <li class="mx-3"><%= link_to '　MAP　', index_path, class: 'btn btn-outline-primary nav-link text-dark' %></li>
            <li class="mx-3"><%= link_to '投稿一覧', posts_path, class: 'btn btn-outline-primary nav-link text-dark' %></li>
            <li class="mx-3"><%= link_to 'マイページ', customer_path(current_customer.id), class: 'btn btn-outline-info nav-link text-dark' %></li>
            <li class="mx-3"><%= link_to 'ログアウト', destroy_customer_session_path, method: :delete, class: 'btn btn-outline-danger nav-link text-dark' %></li>
          </ul>
        <% else %>
          <ul class="navbar-nav ml-auto">
          <!--ログアウト時-->
            <li class="mx-3"><%= link_to '　MAP　', index_path, class: 'btn btn-outline-primary nav-link text-dark' %></li>
            <li class="mx-3"><%= link_to '投稿一覧', posts_path, class: 'btn btn-outline-primary nav-link text-dark' %></li>
            <li class="mx-3"><%= link_to '新規登録', new_customer_registration_path, class: 'btn btn-outline-primary nav-link text-dark' %></li>
            <li class="mx-3"><%= link_to 'ログイン', new_customer_session_path, class: 'btn btn-outline-primary nav-link text-dark' %></li>
          </ul>
        <% end %>
      </div>
    </div>
  </nav>
</header>