<div class="container">
  <div class="row">
    <div class="col">
      <h2>新規会員登録</h2>
      
      <%= form_with model: @customer, url: customer_registration_path do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        
        <div class="field">
          <%= f.label :name, "氏名" %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>
        
        <div class="field">
          <%= f.label :name_kana, "氏名（カナ）" %><br />
          <%= f.text_field :name_kana, autocomplete: "name_kana" %>
        </div>
        
        <div class="field">
          <%= f.label :nickname, "ニックネーム"%><br />
          <%= f.text_field :nickname, autocomplete: "nickname" %>
        </div>
        
        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autocomplete: "email" %>
        </div>
        
        <div class="field">
          <%= f.label :phone_number, "電話番号" %><br />
          <%= f.telephone_field :phone_number, autocomplete: "phone_number" %>
        </div>
        
        <div class="field">
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
        
        <div class="field">
          <%= f.label :password_confirmation, "パスワード（確認用）" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
        
        <div class="actions">
          <%= f.submit "新規登録" %>
        </div>
      <% end %>
      
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
