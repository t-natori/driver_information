<div class="container">
  <div class="row">
    <div class="col-6 offset-3">
      <h2 class="bg-info text-white text-center">ログイン</h2>
      <%= form_with model: @customer, url: customer_session_path do |f| %>
        <table class="d-flex justify-content-center">
          <tbody>
            <tr class="field">
              <td><%= f.label :nickname, "ニックネーム"%></td>
              <td><%= f.text_field :nickname, autocomplete: "nickname" %></td>
            </tr>
            <tr class="field">
              <td><%= f.label :email, "メールアドレス" %></td>
              <td><%= f.email_field :email, autocomplete: "email" %></td>
            </tr>
            <tr class="field">
              <td>
                <%= f.label :password, "パスワード" %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> 文字以上)</em>
                <% end %>
              </td>
              <td><%= f.password_field :password, autocomplete: "new-password" %></td>
            </tr>
            <tr>
              <td></td>
              <td>
                <% if devise_mapping.rememberable? %>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end %>
              </td>
            </tr>
            <tr class="actions">
              <td></td>
              <td><%= f.submit "ログイン", class: "btn btn-success" %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
      <div class="col-7 offset-4">
        <h6>まだ会員登録されてない方は</h6>
        <%= render "devise/shared/links" %>から新規登録してください
      </div>
    </div>
  </div>
</div>
